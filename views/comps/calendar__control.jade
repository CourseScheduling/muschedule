link(rel="stylesheet" href="/static/calendar__control.css")

#control__wrap
  .control__wrap
    #control__search
      input(type="text" placeholder="ENTER YOUR COURSES e.g. CPSC 110" v-model="query" @keyup="search()")#searchInp
      .result__wrap
        .search__loading(v-show="loading")
        .search__result(v-for="result in results" @click="addCourse(result)")
          .search__resultHead {{result[0]}}
          .search__resultBody {{result[1]}}
    .wrap__header :: COURSES ::
    .course__container
      .course(v-for="c in courses" @click="activeToggle(c)" v-bind:style="{backgroundColor: c.color}" v-bind:class="{'course--active':c.active}")
        .course__code {{c.code}}
        .course__description {{c.description}}
        .course__typeHeader(v-for="type in c.typeArr") {{type}}
          .course__section(v-for="section in c.secMap[type]") {{section.section}}
  .control__wrap
    .control__btn.control__btn--gen(@click="generate()") AUTO GEN
    .control__btn ADD BREAK